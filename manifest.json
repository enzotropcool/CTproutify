{
  "manifest_version": 3,
  "name": "CT Proutify",
  "description": "Remplace les noms de personnalités politiques françaises par leurs versions proutifiées.",
  "version": "1.1",
  "homepage_url": "https://github.com/enzotropcool/proutify",
  "icons": {
    "64": "static/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "js/replace.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "64": "static/icon.png"
    },
    "default_popup": "index.html"
  },
  "host_permissions": [
    "https://*/*"
  ]
}
